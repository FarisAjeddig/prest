{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Réalisations{% endblock %}
{% block body %}
    <section class="ftco-section ftco-no-pb">
        <div class="container-fluid px-5">
            <div class="row no-gutters justify-content-center mb-5">
                <div class="col-md-7 text-center heading-section ftco-animate">
                    <h2 class="mb-4">Nos projets récents</h2>
                    <p></p>
                    <p></p>
                </div>
            </div>
            <div class="row no-gutters">
            {% for realisation in realisations %}
                <div class="col-md-4 col-lg-4">
                    <div class="project img ftco-animate d-flex justify-content-center align-items-center" style="background-image: url({{ '../uploads/pictures/'}}{{ realisation.picture }});">
                        <div class="overlay"></div>
                        <a href="{{ realisation.url }}" target="_blank" class="btn-site d-flex align-items-center justify-content-center"><span class="icon-subdirectory_arrow_right"></span></a>
                        <div class="text text-center p-4">
                            <h3><a href="{{ realisation.url }}" target="_blank">{{ realisation.customerName }}</a></h3>
                            <span>{{ realisation.typeRealisation }}</span>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </section>
    <br><br><br>
{% endblock %}