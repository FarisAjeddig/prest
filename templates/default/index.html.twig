    {% if (app.request.method != "POST") %}
    <section class="ftco-section ftco-consult ftco-no-pt ftco-no-pb" style="background-image: url({{ 'build/images/bg_5.jpg' }});" data-stellar-background-ratio="0.5" id="devis">
        <div class="overlay"></div>
        <div class="container">
            <div class="row justify-content-end">
                <div class="col-md-6 py-5 px-md-5">
                    <div class="py-md-5">
                        <div class="heading-section heading-section-white ftco-animate mb-5">
                            <h2 class="mb-4">Demander une estimation</h2>
                            <p>Laissez nous vos coordonnées et parlez nous de votre business / projet. Nous vous recontacterons très rapidement pour en discuter.</p>
                        </div>
                        {{ form_start(form) }}
                        <div class="appointment-form ftco-animate">
                            <div class="d-md-flex">
                                <div class="form-group">
                                    {{ form_widget(form.robots, {'attr' : {'class': 'form-control', 'placeholder' : 'Prénom'}}) }}
                                </div>
                                <div class="form-group ml-md-4">
                                    {{ form_widget(form.name, {'attr' : {'class': 'form-control', 'placeholder' : 'Nom'}}) }}
                                </div>
                            </div>

                            <div class="d-md-flex">
                                <div class="form-group">
                                    {{ form_widget(form.email, {'attr' : {'class': 'form-control', 'placeholder' : 'Email'}}) }}
                                </div>
                                <div class="form-group ml-md-4">
                                    {{ form_widget(form.phoneNumber, {'attr' : {'class': 'form-control', 'placeholder' : 'Téléphone'}}) }}
                                </div>
                            </div>

                            <div class="d-md-flex">
                                <div class="form-group">
                                    {{ form_widget(form.message, {'attr' : {'class': 'form-control', 'placeholder' : 'Votre projet'}}) }}
                                </div>
                                <div class="form-group ml-md-4">
                                    {{ form_widget(form.Envoyer, {'attr' : {'class': 'btn btn-white py-3 px-4', 'placeholder' : 'Envoyer'}}) }}
                                </div>
                            </div>
                        </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </section>
    {% endif %}

    {% if articles != [] %}
    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row justify-content-center mb-5 pb-2">
                <div class="col-md-8 text-center heading-section ftco-animate">
                    <h2 class="mb-4"><span>Blog</span></h2>
                    <p>Le contenu du blog est pensé pour vous aider à développer votre business</p>
                </div>
            </div>
            <div class="row">
                {% for article in articles %}
                    <div class="col-md-6 col-lg-4 ftco-animate">
                        <div class="blog-entry">
                            <a href="{{ url('blog_show', {'id': article.id }) }}" class="block-20 d-flex align-items-end" style="background-image: url({{ '../uploads/pictures/'}}{{ article.picture }});">
                                <div class="meta-date text-center p-2">
                                    <span class="day">{{ article.creationDate|date("d") }}</span>
                                    <span class="mos">{{ article.creationDate|date('M')}}</span>
                                    <span class="yr">{{ article.creationDate|date('Y')}}</span>
                                </div>
                            </a>
                            <div class="text bg-white p-4">
                                <h3 class="heading"><a href="{{ url('blog_show', {'id': article.id }) }}">{{ article.title }}</a></h3>
                                <p>{{article.content |raw}}</p>
                                <div class="d-flex align-items-center mt-4">
                                    <p class="mb-0"><a href="{{ url('blog_show', {'id': article.id }) }}" class="btn btn-primary">Voir plus  <span class="ion-ios-arrow-round-forward"></span></a></p>
                                    <p class="ml-auto mb-0">
                                        {#                                    <a href="{{ url('blog_show', {'id': article.id }) }}" class="mr-2">Admin</a>#}
                                        <a href="{{ url('blog_show', {'id': article.id }) }}" class="meta-chat"><span class="icon-chat"></span> {{ article.comments |length }}</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}

    <section class="ftco-section testimony-section">
        <div class="container">
